# Server Configuration
PORT=3000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/c_learning_db?schema=public"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d

# OAuth - Kakao
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret
KAKAO_CALLBACK_URL=https://your-ngrok-url.ngrok-free.dev/api/auth/kakao/callback

# OAuth - Google
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://your-ngrok-url.ngrok-free.dev/api/auth/google/callback

# OAuth - GitHub (for GitHub integration)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=https://your-ngrok-url.ngrok-free.dev/api/github/callback

# AI Service (Ollama)
OLLAMA_BASE_URL=http://localhost:11434

# Baekjoon API (if available)
BAEKJOON_API_URL=https://api.baekjoon.com
BAEKJOON_API_KEY=your-baekjoon-api-key

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:19006,http://localhost:3000,http://localhost:8081,https://your-ngrok-url.ngrok-free.dev

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload (future use)
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=debug
